<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Active</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= humanized_money_with_symbol product.price %></td>
        <td><%= product.active %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <% if product.active? %>
            <td>
              <%= link_to 'Disable', deactivate_product_path(product), "original-title": "Desativar", data: { confirm: 'Are you sure?' } %>
            </td>
          <% else %>
            <td> 
              <%= link_to 'Activate', activate_product_path(product), "original-title": "Ativar", data: { confirm: 'Are you sure?' } %>
            </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

