<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<%= form_tag products_path, method: :get do %>
  <table>
    <thead>
      <tr style="text-align:left">
        <th>Name:</th>
        <th>Category:</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= text_field_tag(:name, params[:name]) %></td>
        <td><%= select_tag(:category_id, options_for_select(@domains[:categories], params[:category_id]), { prompt: 'Select an option' }) %></td>
        <td><%= submit_tag("Pesquisar", class:"actions") %></td>
      </tr>
    </tbody>
  </table>
<% end %> <br>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Price</th>
      <th>Active</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.active.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.name %></td>
        <td><%= humanized_money_with_symbol product.price %></td>
        <td><%= product.active %></td>
        <td><%= product.category.name %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <% if product.active? %>
            <td>
              <%= link_to 'Deactivate', deactivate_product_path(product), 'original-title': 'Deactivate', data: { confirm: 'Are you sure?' } %>
            </td>
          <% else %>
            <td> 
              <%= link_to 'Activate', activate_product_path(product), 'original-title': 'Activate', data: { confirm: 'Are you sure?' } %>
            </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br><br>

