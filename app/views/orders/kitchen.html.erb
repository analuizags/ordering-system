<div class='row justify-content-center gap-3'>
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show p-2" role="alert">
      <p id="notice" class="m-1"><%= notice %>Login efetuado com sucesso.</p>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="padding: 1rem 1rem !important"></button>
    </div>
  <% end %>

  <div class="row">
    <div class="col"><hr></div>
    <div class="col-auto"><h4>Registered</h4></div>
    <div class="col"><hr></div>
  </div>

  <% @orders.for_make.each do |order| %>
    <% total = 0 %>
    <% order.products.each {|p| total += p.price } %>

    <div class="card" style="width: 18rem;">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title"><%= order.table %></h5>
        <h6 class="card-subtitle mb-2 text-muted">Order #<%= order.id %></h6>
        <p class="card-text">
          <ul class="list-group list-group-flush">
            <% order.order_products.for_make.each do |order_product| %>
              <% registered = order_product.quantity - order_product.making - order_product.done %>

              <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-3 w-100">
                  <div class="fw-bold me-1">
                    <%= order_product.product.name %>
                  </div>
                  <%= order_product.note %>
                </div>
                <span class="badge bg-primary rounded-pill"><%= registered %></span>
              </li>
            <% end %>
          </ul>
        </p>
        <div class="d-grid mt-auto">
          <%= link_to 'Make', make_order_path(order), { class: 'btn btn-primary btn-sm', data: 
              { confirm: 'Are you sure?' } } %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row mt-4">
    <div class="col"><hr></div>
    <div class="col-auto"><h4>Making</h4></div>
    <div class="col"><hr></div>
  </div>

  <% @orders.making.each do |order| %>
    <% total = 0 %>
    <% order.products.each {|p| total += p.price } %>

    <div class="card" style="width: 18rem;">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title"><%= order.table %></h5>
        <h6 class="card-subtitle mb-2 text-muted">Order #<%= order.id %></h6>
        <p class="card-text">
          <ul class="list-group list-group-flush">
            <% order.order_products.making.each do |order_product| %>

              <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-3 w-100">
                  <div class="fw-bold me-1">
                    <%= order_product.product.name %>
                  </div>
                  <%= order_product.note %>
                </div>
                <span class="badge bg-primary rounded-pill"><%= order_product.making %></span>
              </li>

            <% end %>
          </ul>
        </p>
        <div class="d-grid mt-auto">
          <%= link_to 'Done', done_order_path(order), { class: 'btn btn-primary btn-sm', data: 
              { confirm: 'Are you sure?' } } %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row mt-4">
    <div class="col"><hr></div>
    <div class="col-auto"><h4>Done</h4></div>
    <div class="col"><hr></div>
  </div>

  <% @orders.done.each do |order| %>
    <% total = 0 %>
    <% order.products.each {|p| total += p.price } %>

    <div class="card" style="width: 18rem;">
      <div class="card-body d-flex flex-column">
        <h5 class="card-title"><%= order.table %></h5>
        <h6 class="card-subtitle mb-2 text-muted">Order #<%= order.id %></h6>
        <p class="card-text">
          <ul class="list-group list-group-flush">
            <% order.order_products.done.each do |order_product| %>
              <li class="list-group-item d-flex justify-content-between align-items-start">
                <div class="ms-2 me-3 w-100">
                  <div class="fw-bold me-1">
                    <%= order_product.product.name %>
                  </div>
                  <%= order_product.note %>
                </div>
                <span class="badge bg-primary rounded-pill"><%= order_product.done %></span>
              </li>
            <% end %>
          </ul>
        </p>
      </div>
    </div>
  <% end %>

</div>
